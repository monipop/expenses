<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
        http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <servlet>
        <servlet-name>All expenses</servlet-name>
        <servlet-class>servlets.AllExpenses</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>All expenses</servlet-name>
        <url-pattern>/expenses</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>All account labels</servlet-name>
        <servlet-class>servlets.AllAccountLabels</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>All account labels</servlet-name>
            <url-pattern>/labels</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Edit name</servlet-name>
        <servlet-class>servlets.EditName</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Edit name</servlet-name>
        <url-pattern>/editName</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Edit amount</servlet-name>
        <servlet-class>servlets.EditAmount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Edit amount</servlet-name>
        <url-pattern>/editAmount</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Total amount</servlet-name>
        <servlet-class>servlets.TotalAmount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Total amount</servlet-name>
        <url-pattern>/totalAmount</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlets.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>


    <!--<welcome-file-list>
        <welcome-file>*.html</welcome-file>
    </welcome-file-list>-->
</web-app>